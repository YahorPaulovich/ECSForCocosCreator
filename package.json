{
  "name": "miski",
  "version": "0.6.0",
  "description": "A simple ECS architecture in Typescript",
  "main": "dist/miski.min.js",
  "module": "dist/miski.min.js",
  "types": "dist/miski.min.d.ts",
  "type": "module",
  "directories": {
    "dist": "dist",
    "doc": "docs",
    "test": "test"
  },
  "exports": {
    "import": "./dist/miski.min.js",
    "types": "./dist/esm/miski.min.d.ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.4",
    "@types/chai": "^4.2.21",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.7",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "@typescript-eslint/parser": "^4.28.5",
    "chai": "^4.3.4",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "esm": "^3.2.25",
    "gh-pages": "^3.2.3",
    "mocha": "^9.0.3",
    "prettier": "^2.3.2",
    "prettier-eslint": "^13.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.55.1",
    "rollup-plugin-dts": "^4.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^10.1.0",
    "tslib": "^2.3.0",
    "typedoc": "^0.22.10",
    "typescript": "^4.3.5"
  },
  "scripts": {
    "prebuild": "npm run clean && npm run lint:fix",
    "build": "npm run build:types && rollup -c ./rollup.config.js",
    "postbuild": "npm run build:docs && npm run clean:post",
    "build:docs": "npx typedoc src/index.ts --out docs",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "npm run clean:pre && npm run clean:post && npm run clean:docs",
    "clean:docs": "rimraf docs",
    "clean:pre": "rimraf build && rimraf dist && rimraf types",
    "clean:post": "rimraf types",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix \"./src/**/*.ts\"",
    "test": "mocha",
    "check:types": "tsc --noEmit",
    "gh-pages": "gh-pages --dist=./demo --dotfiles=true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phughesmcr/Miski"
  },
  "keywords": [
    "ecs",
    "entity-component-system",
    "entity",
    "component",
    "system"
  ],
  "author": {
    "name": "Peter Hughes",
    "email": "peter@phugh.es",
    "url": "https://www.phugh.es"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phughesmcr/Miski/issues"
  },
  "homepage": "https://github.com/phughesmcr/Miski"
}
