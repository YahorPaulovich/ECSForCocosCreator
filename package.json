{
  "name": "miski",
  "version": "0.3.1",
  "description": "A simple ECS architecture in Typescript",
  "main": "dist/cjs/index.min.js",
  "module": "dist/esm/index.min.js",
  "browser": "dist/iife/index.min.js",
  "types": "dist/cjs/index.d.ts",
  "type": "module",
  "directories": {
    "dist": "dist",
    "doc": "docs",
    "test": "test"
  },
  "exports": {
    "require": "./dist/umd/index.min.js",
    "import": "./dist/esm/index.min.js",
    "node": "./dist/cjs/index.min.js",
    "browser": "./dist/iife/index.min.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.14.2",
    "@babel/plugin-syntax-bigint": "^7.8.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.6.1",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "babel-plugin-transform-bigint": "^1.0.9",
    "chai": "^4.3.4",
    "eslint": "^7.27.0",
    "esm": "^3.2.25",
    "gh-pages": "^3.2.0",
    "mocha": "^8.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.50.0",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.0.0",
    "tslib": "^2.2.0",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "prebuild": "npm run clean:pre && npm run lint:fix",
    "build": "npm run build:types && rollup -c ./rollup.config.js",
    "postbuild": "npm run build:docs && npm run clean:post",
    "build:docs": "npx typedoc src/index.ts --out docs",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationDir types",
    "clean": "npm run clean:pre && npm run clean:post && npm run clean:docs",
    "clean:docs": "rimraf docs",
    "clean:pre": "rimraf build && rimraf dist && rimraf types && npm run clean:docs",
    "clean:post": "rimraf types",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix \"./src/**/*.ts\"",
    "test": "tsc -p tsconfig.json && ts-mocha -p tsconfig.testing.json -r ts-node/register -r esm 'test/**/*.ts'",
    "check:types": "tsc --noEmit",
    "check:es5": "npx es-check es5 ./dist/iife/*.js --verbose",
    "check:es3": "npx es-check es3 ./dist/iife/*.js --verbose",
    "gh-pages": "gh-pages --dist=./demo --dotfiles=true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phughesmcr/Miski"
  },
  "keywords": [
    "ecs",
    "entity-component-system",
    "entity",
    "component",
    "system"
  ],
  "author": {
    "name": "Peter Hughes",
    "email": "peter@phugh.es",
    "url": "https://www.phugh.es"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phughesmcr/Miski/issues"
  },
  "homepage": "https://github.com/phughesmcr/Miski",
  "dependencies": {
    "core-js": "^3.12.1"
  }
}
