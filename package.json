{
  "name": "miski",
  "version": "0.7.0",
  "description": "An ECS architecture in Typescript",
  "main": "dist/miski.min.js",
  "module": "dist/miski.min.js",
  "types": "dist/miski.min.d.ts",
  "type": "module",
  "directories": {
    "dist": "dist",
    "doc": "docs",
    "test": "test"
  },
  "exports": {
    "import": "./dist/miski.min.js",
    "types": "./dist/esm/miski.min.d.ts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/chai": "^4.3.0",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "chai": "^4.3.6",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "esm": "^3.2.25",
    "gh-pages": "^3.2.3",
    "mocha": "^9.2.0",
    "prettier": "^2.5.1",
    "prettier-eslint": "^13.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.67.2",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-node": "^10.5.0",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5"
  },
  "scripts": {
    "prebuild": "npm run clean && npm run lint:fix",
    "build": "rollup -c ./rollup.config.js",
    "postbuild": "npm run build:docs && npm run clean:post",
    "build:docs": "npx typedoc src/index.ts --out docs",
    "clean": "npm run clean:pre && npm run clean:post && npm run clean:docs",
    "clean:docs": "rimraf docs",
    "clean:pre": "rimraf build && rimraf dist && rimraf types",
    "clean:post": "rimraf types",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix \"./src/**/*.ts\"",
    "test": "mocha",
    "check:types": "tsc --noEmit",
    "gh-pages": "gh-pages --dist=./ --dotfiles=true"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phughesmcr/Miski"
  },
  "keywords": [
    "ecs",
    "entity-component-system",
    "entity",
    "component",
    "system",
    "simulation",
    "sim",
    "gamedev",
    "game engine"
  ],
  "author": {
    "name": "Peter Hughes",
    "email": "peter@phugh.es",
    "url": "https://www.phugh.es"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phughesmcr/Miski/issues"
  },
  "homepage": "https://github.com/phughesmcr/Miski"
}
