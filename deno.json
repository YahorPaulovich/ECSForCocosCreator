{
  "lock": false,
  "name": "@phughesmcr/miski",
  "version": "0.1.0",
  "license": "MIT",
  "exports": "./mod.ts",
  "bench": {
    "include": ["bench/**/*.bench.ts"]
  },
  "compilerOptions": {
    "erasableSyntaxOnly": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "lib": ["esnext"],
    "module": "esnext",
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "verbatimModuleSyntax": true
  },
  "fmt": {
    "newLineKind": "lf",
    "indentWidth": 2,
    "lineWidth": 120,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "always",
    "useTabs": false,
    "exclude": ["*/.*", "**/*.md", "LICENSE"]
  },
  "imports": {
    "@/": "./src/",
    "@phughesmcr/bitpool": "jsr:@phughesmcr/bitpool@^0.6.1",
    "@phughesmcr/booleanarray": "jsr:@phughesmcr/booleanarray@^0.9.0",
    "@phughesmcr/partitionedbuffer": "jsr:@phughesmcr/partitionedbuffer@^0.3.0"
  },
  "lint": {
    "exclude": ["example/**/*.ts"],
    "rules": {
      "exclude": ["no-explicit-any"],
      "include": ["use-isnan"],
      "tags": ["recommended", "jsr"]
    }
  },
  "tasks": {
    "bundle": {
      "description": "Bundle the codebase using Bun",
      "command": "bun build ./mod.ts --outdir ./dist --sourcemap=linked --minify"
    },
    "demo": {
      "description": "Run the demo",
      "command": "deno run -Ar --unstable example/cli.example.ts"
    },
    "prep": {
      "description": "Format, lint, and check the codebase",
      "command": "deno fmt && deno lint && deno check mod.ts src/**/*.ts"
    }
  },
  "test": {
    "include": ["test/**/*.test.ts"]
  }
}
